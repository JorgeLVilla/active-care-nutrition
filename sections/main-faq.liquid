<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<div class="faq_section">
  <div class="fq_sc">
    <h1>{{ section.settings.title }}</h1>
  </div>
  <div class="fq_cont">
    {% for block in section.blocks %}
      <div class="fq_queans">
        <h3>{{ block.settings.question }} <span class="arrdw_pl">+</span><span class="arrdw_mn">-</span></h3>
        <div class="ans">{{ block.settings.answer }}</div>
      </div>
    {% endfor %}
  </div>
</div>
<style>
  .faq_section h1 {margin-top: 40px;text-align: center;margin-bottom: 55px;}
  .fq_cont {padding: 20px;max-width: 60rem;margin: 0 auto;}
  .ans,.arrdw_mn {display: none;}
  .fq_queans{margin-bottom:20px;border-bottom: 2px solid #000;padding-bottom: 15px;}
  .ans {padding-top: 20px;}
  .fq_queans h3 {margin:0;letter-spacing: 0;font-weight: 600;cursor: pointer;display: flex;justify-content: space-between;}
  @media only screen and (min-width:320px) and (max-width:830px){
   .faq_section h1 {margin-top: 20px;margin-bottom: 25px;} 
  }
</style>
<script>
$(document).on('click','.fq_queans h3',function(){
  if($(this).next().css('display') == 'none'){
    $('.ans').slideUp();
    $(this).next().slideDown();
    $('.arrdw_pl').css('display','inline-block');
    $('.arrdw_mn').css('display','none');
    $(this).children('.arrdw_pl').css('display','none');
    $(this).children('.arrdw_mn').css('display','inline-block');
  }
  else{
    $(this).next().slideUp();
    $(this).children('.arrdw_mn').css('display','none');
    $(this).children('.arrdw_pl').css('display','inline-block');
  }
});
</script>
{% schema %}
  {
    "name": "Faq",
    "settings": [
      {
        "type":"text",
        "id":"title",
        "label":"Title"
      }
    ],
    "blocks":[
      {
        "type":"questionanswer",
        "name":"question and answer",
        "settings":[
          {
            "type":"textarea",
            "id":"question",
            "label":"Question"
          },
          {
            "type":"textarea",
            "id":"answer",
            "label":"Answer"
          }
        ]
      }
    ]
  }
{% endschema %}
